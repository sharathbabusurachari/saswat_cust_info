[Unit]
Description=gunicorn daemon
Requires=gunicorn.socket
After=network.target

[Service]
User=jenkins
Group=jenkins
WorkingDirectory=/var/lib/jenkins/workspace/02_DJango_CustApp_CICD/saswat_cust_app
ExecStart=/var/lib/jenkins/workspace/02_DJango_CustApp_CICD/saswatfinenv/bin/gunicorn --workers 1 --log-level debug --error-logfile /var/lib/jenkins/workspace/02_DJango_CustApp_CICD/error.log --bind unix:/run/gunicorn.sock saswat_cust_app.wsgi:application

[Install]
WantedBy=multi-user.target